<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_vertical">

    <ImageView
        android:id="@+id/imageViewItemTravel"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:src="@drawable/default_travel_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:background="@color/seeThroughBlack"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_S"
        android:paddingEnd="@dimen/padding_S"
        android:paddingBottom="@dimen/padding_XS">

        <CheckBox
            android:id="@+id/checkboxItemTravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_horizontal"
            android:buttonTint="@color/colorDivider"
            android:checked="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewItemTravelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_item_XL" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
