<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_S"
    android:paddingEnd="@dimen/padding_S">

    <CheckBox
        android:id="@+id/checkboxItemPlanElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:checked="false"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewItemPlanFromTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_item_S"
        tools:text="08:00 AM"/>

    <FrameLayout
        android:id="@+id/layoutImageAndLine"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <View
            android:id="@+id/lineItemPlan"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vertical"
            android:baselineAligned="false"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewItemPlan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_circle_plane" />

            <ImageView
                android:id="@+id/itemPlanShareButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:clickable="true"
                android:cropToPadding="false"
                android:scaleType="centerInside"
                android:src="@drawable/ic_share"
                android:textAlignment="viewEnd" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_vertical">

        <TextView
            android:id="@+id/textViewItemPlanName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_item_S"
            tools:text="Lorem ipsum"/>

        <TextView
            android:id="@+id/textViewItemPlanLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_item_XS"
            tools:text="ac orci phasellus egestas tellus rutrum tellus pellentesque eu tincidunt"/>

    </LinearLayout>
</LinearLayout>
