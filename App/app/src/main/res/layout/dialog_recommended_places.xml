<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/textViewRecommendedPlacesDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_dialog_title"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title_S" />

    </FrameLayout>

    <ListView
        android:id="@+id/listViewRecommendedPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_recommended_place"
        android:padding="@dimen/padding_S"/>

</LinearLayout>
